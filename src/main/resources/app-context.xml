<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="transformationEngine" class="gr.ekt.transformationengine.core.TransformationEngine">
		<property name="dataLoader" ref="dataloader" />
		<property name="workflow" ref = "conjunctionTransformationWorkflow"/>
		<property name="outputGenerator" ref = "outputGenerator"/>
	</bean>

	<bean id="dataloader" class="gr.ekt.oaicatbte.dspace.dataloader.DSpaceDataLoader">
		
	</bean>

	<bean id="conjunctionTransformationWorkflow"
		class="gr.ekt.transformationengine.core.ConjunctionTransformationWorkflow">
		<property name="steps">
			<list>
				
			</list>
		</property>
	</bean>
	
	<bean id="outputGenerator" class="gr.ekt.oaicatbte.dspace.dataloader.OAIOutputGenerator">
	</bean>
	
	<bean id="metadata-prefix-mapping" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry key="oai_dc" value-ref="outputGenerator"/>
				<entry key="rdf" value-ref="outputGenerator"/>
				<entry key="ese" value-ref="outputGenerator"/>
			</map>
		</constructor-arg>
	</bean>
	
	<bean id="virtual-sets" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<map>
					<entry key="name" value="driver" />
					<entry key="setSpec" value="driver" />
					<entry key="filters" value-ref="outputGenerator" />
				</map>
				<map>
					<entry key="name" value="voa3r" />
					<entry key="setSpec" value="voa3r" />
					<entry key="filters" value-ref="outputGenerator" />
				</map>
			</list>
		</constructor-arg>
	</bean> 
	
</beans>